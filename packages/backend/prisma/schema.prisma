model Location {
  id        Int   @id @default(autoincrement())
  longitude Float
  latitude  Float
  court Court[]
  user User[]
}

// User model
model User {
  id      String    @id 
  name    String
  email   String
  avatar String?
  role    Role
  teams   Team[] @relation(name: "teamMembers")
  captain Team?  @relation("captain")
  owner Owner?
  joinRequests Team[] @relation(name: "joinRequests")
  location Location @relation(fields: [locationId], references: [id])
  locationId Int
}

model Owner {
  id      Int    @id @default(autoincrement())
  user    User @relation(fields: [userId], references: [id])
  userId  String  @unique
  courts Court[]
}

// Team model
model Team {
  id          Int          @id @default(autoincrement())
  name        String
  logo        String
  members     User[]       @relation("teamMembers")
  captain     User         @relation(fields: [captainId], references: [id], name: "captain")
  captainId   String          @unique
  reservations Reservation[]
  joinRequests User[] @relation(name: "joinRequests")
}

model Reservation {
  id       Int      @id @default(autoincrement())
  from DateTime
  to DateTime
  teams     Team[]
  court Court @relation(fields: [courtId], references: [id])
  courtId Int
  status ReservationStatus[]
}

model Court {
  id       Int      @id @default(autoincrement())
  name String
  schedule DateTime[]
  reservations Reservation[]
  owner Owner @relation(fields: [ownerId], references: [id])
  ownerId Int
  location Location @relation(fields: [locationId], references: [id])
  locationId Int
  address String
  pricePerHour Int
  facilities Facilities[]
  rating Float?
  phoneNumber String
  imgs String[]
  courtType CourtType @default(FOOTBALL)
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  DECLINED
  NO_ENOUGH_PLAYERS
}

enum Facilities {
  SHOWERS
  CHANGING_ROOMS
  INDOOR
  OUTDOOR
}

enum Role {
  ADMIN
  OWNER
  USER
}

enum CourtType {
  FOOTBALL
  VOLLEYBALL
}
